{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "backend/src/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "^/api/(.*)$",
        "dest": "backend/src/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/build/index.html"
      }
    ]
  }